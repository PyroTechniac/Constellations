{
	"$schema": "http://json.schemastore.org/package",
	"name": "@pyrotechniac/constellation",
	"version": "0.0.1",
	"description": "The framework for the Starlight Discord bot",
	"main": "dist/index.js",
	"scripts": {
		"prepublishOnly": "yarn build",
		"build": "tsc",
		"test": "jest",
		"test:lint": "eslint --ext ts src __tests__",
		"test:ci": "jest --ci --no-stack-trace --verbose",
		"lint": "eslint --fix --ext ts src __tests__",
		"docs": "typedoc"
	},
	"keywords": [],
	"author": "dirigeants",
	"license": "MIT",
	"engines": {
		"node": ">=10.1.0"
	},
	"resolutions": {
		"acorn": "^7.1.1",
		"minimist": "^1.2.2"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/jest": "^25.1.4",
		"@types/node": "^13.9.0",
		"@typescript-eslint/eslint-plugin": "^2.23.0",
		"@typescript-eslint/parser": "^2.23.0",
		"ava": "^3.5.0",
		"discord.js": "discordjs/discord.js",
		"eslint": "^6.8.0",
		"eslint-config-klasa": "dirigeants/klasa-lint",
		"jest": "^25.1.0",
		"nyc": "^15.0.0",
		"source-map-support": "^0.5.13",
		"ts-jest": "^25.2.1",
		"ts-node": "^8.6.2",
		"typedoc": "^0.17.0-3",
		"typescript": "^3.8.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dirigeants/util"
	},
	"dependencies": {
		"@discordjs/collection": "^0.1.5",
		"fs-nextra": "^0.4.7"
	},
	"jest": {
		"preset": "ts-jest",
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/__tests__/lib/"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/__tests__/lib/"
		],
		"testEnvironment": "node",
		"coverageDirectory": "coverage",
		"collectCoverage": true,
		"coverageReporters": [
			"text",
			"lcov",
			"clover"
		],
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		},
		"globals": {
			"ts-jest": {
				"tsConfig": "<rootDir>/__tests__/tsconfig.json"
			}
		}
	}
}
